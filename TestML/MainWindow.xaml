<Window x:Class="TestML.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestML"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="70*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
        </Grid.RowDefinitions>

        <Button Content="Charger une image" HorizontalAlignment="Left" VerticalAlignment="Top" Width="auto" Margin="10,10,0,0" Grid.Column="0" Grid.Row="0" Click="Btn_Charger_Img_Click"/>
        <Button Content="Classifier" HorizontalAlignment="Left" VerticalAlignment="Top" Width="auto" Margin="10,10,0,0" Grid.Column="0" Grid.Row="1" Click="Btn_Classifier_Click"/>

        <Image Name="img" Margin="10" Grid.Column="1" Grid.Row="0" Grid.RowSpan="2"/>
    </Grid>
</Window>
